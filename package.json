{
	"name": "alarma",
	"productName": "alarma",
	"version": "1.0.0",
	"description": "My Electron application description",
	"main": "src/index.js",
	"scripts": {
		"start": "electron-forge start",
		"package": "yarn build:css && electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish",
		"lint": "echo \"No linting configured\"",
		"design": "live-server src/",
		"dev:css": "TAILWIND_MODE=build NODE_ENV=development postcss tailwind.css -o src/index.css",
		"build:css": "TAILWIND_MODE=build NODE_ENV=production postcss tailwind.css -o src/index.css"
	},
	"keywords": [],
	"author": {
		"name": "TheBoringDude",
		"email": "iamcoderx@gmail.com"
	},
	"license": "MIT",
	"config": {
		"forge": {
			"packagerConfig": {},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "alarma"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			]
		}
	},
	"dependencies": {
		"electron-squirrel-startup": "^1.0.0"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.54",
		"@electron-forge/maker-deb": "^6.0.0-beta.54",
		"@electron-forge/maker-rpm": "^6.0.0-beta.54",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.54",
		"@electron-forge/maker-zip": "^6.0.0-beta.54",
		"autoprefixer": "^10.2.5",
		"electron": "13.6.6",
		"live-server": "^1.2.1",
		"postcss": "^8.2.9",
		"postcss-cli": "^8.3.1",
		"tailwindcss": "^2.1.1"
	}
}
